                                <% for(var j = 0; j < employees.length; j++) {
                                    var obstacleResult = '';
                                    if (typeof employees[j].work[i] != 'undefined') {
                                        obstacleResult = employees[j].work[i].obstacleResult
                                    } %>
                                <td><%=obstacleResult%></td>
                                <% } %>
                            </tr>
                        </table>
                    </div>
                </li>
            <%
